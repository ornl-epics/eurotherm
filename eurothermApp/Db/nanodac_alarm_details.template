{
  field(DESC, "Alarm $(A) Reference")
  field(DTYP, "asynInt32")
  field(INP, "@asyn($(ALARM_PORT_A),6,1)")
  field(SCAN, "I/O Intr")
  field(LINR, "LINEAR")
}

